<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DigitalCharacterSheet.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DigitalCharacterSheet.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DigitalCharacterSheet.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="DigitalCharacterSheet">

    <!-- The comments are structured as item a|item b|item c.
            If the StackPanel is vertical, item a is the topmost.
            If the StackPanel is horizontal, item a is the leftmost. -->
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- StackPanel|StackPanel -->
        <StackPanel>
            <!-- StackPanel|StackPanel|StackPanel -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                <!-- StackPanel|StackPanel -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <!-- Image|StackPanel|StackPanel -->
                    <Image></Image>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <!-- StackPanel|StackPanel -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                            <!-- Name|Class|Race|StackPanel -->
                            <TextBlock Name="Name"></TextBlock>
                            <TextBlock Name="Class"></TextBlock>
                            <TextBlock Name="Race"></TextBlock>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                <!-- Height|Weight -->
                                <TextBlock Name="Height"></TextBlock>
                                <TextBlock Name="Weight"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel>
                            <!-- XP|LVL|Alignment|Size -->
                            <TextBlock Name="Xp"></TextBlock>
                            <TextBlock Name="Level"></TextBlock>
                            <TextBlock Name="Alignment"></TextBlock>
                            <TextBlock Name="Size"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                        <!-- Current HP|Max HP|Temporary HP|StackPanel|Armor Class|Speed -->
                        <TextBlock Name="CurrentHp"></TextBlock>
                        <TextBlock Name="MaxHp"></TextBlock>
                        <TextBlock Name="TemporaryHp"></TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                            <!-- Initiative|Hit Dice -->
                            <TextBlock Name="Initiative"></TextBlock>
                            <TextBlock Name="HitDice"></TextBlock>
                        </StackPanel>
                        <TextBlock Name="ArmorClass"></TextBlock>
                        <TextBlock Name="Speed"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                        <!-- StackPanel|StackPanel|Spell Slots Remaining/Ability Charges -->
                        <StackPanel Name="Stats" Orientation="Vertical" VerticalAlignment="Stretch"></StackPanel>
                        <StackPanel Name="Skills" Orientation="Vertical" VerticalAlignment="Stretch"></StackPanel>
                        <ScrollViewer Name="SpellSlotsAbilityCharges"></ScrollViewer>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <!-- AttacksSpells|StackPanel -->
                    <ScrollViewer Name="AttacksSpells"></ScrollViewer>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                        <!-- StackPanel|BackStory -->
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                            <TextBlock Name="PersonalityTraits"></TextBlock>
                            <TextBlock Name="Ideals"></TextBlock>
                            <TextBlock Name="Bonds"></TextBlock>
                            <TextBlock Name="Flaws"></TextBlock>
                        </StackPanel>
                        <TextBlock Name="Backstory"></TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
            <!-- StackPanel|Proficiencies|Money|Equipment -->
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                <!-- Saving Throws|Languages -->
                <ScrollViewer Name="Saving Throws"></ScrollViewer>
                <ScrollViewer Name="Languages"></ScrollViewer>
            </StackPanel>
            <ScrollViewer Name="Proficiencies"></ScrollViewer>
            <ScrollViewer Name="Money"></ScrollViewer>
            <ScrollViewer Name="Equipment"></ScrollViewer>
        </StackPanel>
    </StackPanel>
    
