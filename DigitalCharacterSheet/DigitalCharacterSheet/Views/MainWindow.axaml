<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:DigitalCharacterSheet.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:DigitalCharacterSheet.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="DigitalCharacterSheet.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="DigitalCharacterSheet">
    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
         to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainViewModel />
    </Design.DataContext>

    <ScrollViewer>
        <!-- The comments are structured as item A|item B|item C.
                If the StackPanel is vertical, item A is the topmost.
                If the StackPanel is horizontal, item A is the leftmost. -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Beige">
            <!-- Top(Stats, Backstory)|Bottom(Proficiencies, Inventory) : Layout : Full Screen -->
            <Border BorderThickness="2" BorderBrush="Black">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <!-- Stats|Attacks/Story : Layout : Top Half -->
                    <Border BorderThickness="2" BorderBrush="Black">
                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                            <!-- Top Half Stats|Bottom Half Stats : Layout : Top Left -->
                            <Border BorderThickness="2" BorderBrush="Black">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <!-- Image|Appearance/Game Stats|Battle Stats : DATA : Top Left-->
                                    <Border BorderThickness="2" BorderBrush="Black">
                                        <Button Name="ChangeCharacterImage">
                                            <Image Name="CharacterImage" Source="../Assets/default_character_image.png"
                                                   Width="136" Height="136"/>
                                        </Button>
                                    </Border>
                                    <Border BorderThickness="2" BorderBrush="Black">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                            <!-- Appearance|Game Stats : DATA : Top Left -->
                                            <Border BorderThickness="2" BorderBrush="Black">
                                                <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                                                    <!-- Name|Class|Race|Height/Weight : DATA : Top Left -->
                                                    <Grid ColumnDefinitions="50, 180" RowDefinitions="*, *, *" Margin="2">
                                                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Name="NameLabel" VerticalAlignment="Center" Foreground="Black">Name:</TextBlock>
                                                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Name="ClassLabel" VerticalAlignment="Center" Foreground="Black">Class:</TextBlock>
                                                        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Name="RaceLabel" VerticalAlignment="Center" Foreground="Black">Race:</TextBlock>
                                                        <TextBox Grid.Row="0" Grid.Column="1" Name="Name" Width="180" Background="SaddleBrown"
                                                                  Foreground="LightGray" Watermark="Name..." Margin="2"></TextBox>
                                                        <TextBox Grid.Row="1" Grid.Column="1" Name="Class" Width="180" Background="SaddleBrown"
                                                                  Foreground="LightGray" Watermark="Class..." Margin="2"></TextBox>
                                                        <TextBox Grid.Row="2" Grid.Column="1" Name="Race" Width="180" Background="SaddleBrown"
                                                                  Foreground="LightGray" Watermark="Race..." Margin="2"></TextBox>
                                                    </Grid>
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                                        <!-- Height|Weight : DATA : Top Left -->
                                                        <Grid ColumnDefinitions="50, 65, 50, 65" RowDefinitions="*" Margin="2">
                                                            <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Name="HeightLabel" VerticalAlignment="Center" Foreground="Black">Height:</TextBlock>
                                                            <TextBox Grid.Row="0" Grid.Column="1" Name="Height" Width="50" Background="SaddleBrown"
                                                                     Foreground="LightGray" Margin="2"></TextBox>
                                                            <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Name="WeightLabel" VerticalAlignment="Center" Foreground="Black">Weight:</TextBlock>
                                                            <TextBox Grid.Row="0" Grid.Column="3" Name="Weight" Width="50" Background="SaddleBrown"
                                                                     Foreground="LightGray" Margin="2"></TextBox>
                                                        </Grid>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                            <Border BorderThickness="2" BorderBrush="Black">
                                                <StackPanel>
                                                    <!-- XP|LVL|Alignment|Size : DATA : Top Left -->
                                                    <Grid ColumnDefinitions="50, 95" RowDefinitions="*, *, *, *" Margin="2">
                                                        <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Name="XpLabel" VerticalAlignment="Center" Foreground="Black">XP:</TextBlock>
                                                        <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Name="LevelLabel" VerticalAlignment="Center" Foreground="Black">LVL:</TextBlock>
                                                        <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Name="EthicsLabel" VerticalAlignment="Center" Foreground="Black">Ethics:</TextBlock>
                                                        <TextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Name="SizeLabel" VerticalAlignment="Center" Foreground="Black">Size:</TextBlock>
                                                        <TextBox Grid.Row="0" Grid.Column="1" Name="Xp" Width="80" Background="SaddleBrown"
                                                                 Foreground="LightGray" Margin="2"></TextBox>
                                                        <TextBox Grid.Row="1" Grid.Column="1" Name="Level" Width="80" Background="SaddleBrown"
                                                                 Foreground="LightGray" Margin="2" Text="{Binding Level}" LostFocus="Level_OnLostFocus"></TextBox>
                                                        <TextBox Grid.Row="2" Grid.Column="1" Name="Ethics" Width="80" Background="SaddleBrown"
                                                                 Foreground="LightGray" Margin="2"></TextBox>
                                                        <TextBox Grid.Row="3" Grid.Column="1" Name="Size" Width="80" Background="SaddleBrown"
                                                                 Foreground="LightGray" Margin="2"></TextBox>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Border>
                                    <Border BorderThickness="4" BorderBrush="Black">
                                        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch">
                                            <!-- Current HP|Max HP|Temporary HP|StackPanel|Armor Class|Speed : DATA : Top Middle-->
                                            
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch" Margin="2">
                                                <TextBlock HorizontalAlignment="Right" Name="CurrentHpLabel" VerticalAlignment="Center" Foreground="Black">Current HP:</TextBlock>
                                                <TextBox Name="CurrentHp" Width="85" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                            </StackPanel>
                                            
                                            <Grid ColumnDefinitions="Auto, Auto, Auto, Auto" RowDefinitions="*, *, *" Margin="2">
                                                <TextBlock Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Name="MaxHpLabel" VerticalAlignment="Center" Foreground="Black">Max HP:</TextBlock>
                                                <TextBox Grid.Row="0" Grid.Column="1" Name="MaxHp" Width="65" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                                <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Name="TemporaryHpLabel" VerticalAlignment="Center" Foreground="Black">Temp HP:</TextBlock>
                                                <TextBox Grid.Row="0" Grid.Column="3" Name="TemporaryHp" Width="65" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                                
                                                <TextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Name="ArmorClassLabel" VerticalAlignment="Center" Foreground="Black">AC:</TextBlock>
                                                <TextBox Grid.Row="1" Grid.Column="1" Name="ArmorClass" Width="65" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                                <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Right" Name="HitDiceLabel" VerticalAlignment="Center" Foreground="Black">Hit Dice:</TextBlock>
                                                <TextBox Grid.Row="1" Grid.Column="3" Name="HitDiceHp" Width="65" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                                
                                                <TextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Name="InitiativeLabel" VerticalAlignment="Center" Foreground="Black">Initiative:</TextBlock>
                                                <TextBox Grid.Row="2" Grid.Column="1" Name="InitiativeHp" Width="65" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                                <TextBlock Grid.Row="2" Grid.Column="2" HorizontalAlignment="Right" Name="SpeedLabel" VerticalAlignment="Center" Foreground="Black">Speed:</TextBlock>
                                                <TextBox Grid.Row="2" Grid.Column="3" Name="Speed" Width="65" Background="SaddleBrown"
                                                         Foreground="LightGray" Margin="2"></TextBox>
                                            </Grid>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                            <Border BorderThickness="2" BorderBrush="Black">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <!-- Ability Scores|Skills|Spell Slots : DATA : Middle Left -->
                                    <Border BorderThickness="2" BorderBrush="Black">
                                        <StackPanel Name="AbilityScores" Orientation="Vertical" VerticalAlignment="Stretch" Background="Gray">
                                            <TextBlock HorizontalAlignment="Center" Margin="2">Str</TextBlock>
                                            <TextBox x:Name="Str" TextAlignment="Center" Margin="8,2" Text="{Binding StrengthText}" LostFocus="OnStatLostFocus"/>
                                            <TextBlock x:Name="StrMod" HorizontalAlignment="Center" Margin="2" Text="{Binding StrengthModifier}"/>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>
                                            
                                            <TextBlock HorizontalAlignment="Center" Margin="2">Dex</TextBlock>
                                            <TextBox x:Name="Dex" TextAlignment="Center" Margin="8, 2" Text="{Binding DexterityText}" LostFocus="OnStatLostFocus"/>
                                            <TextBlock x:Name="DexMod" HorizontalAlignment="Center" Margin="2" Text="{Binding DexterityModifier}"/>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>

                                            <TextBlock HorizontalAlignment="Center" Margin="2">Con</TextBlock>
                                            <TextBox x:Name="Con" TextAlignment="Center" Margin="8, 2" Text="{Binding ConstitutionText}" LostFocus="OnStatLostFocus"/>
                                            <TextBlock x:Name="ConMod" HorizontalAlignment="Center" Margin="2" Text="{Binding ConstitutionModifier}"/>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>

                                            <TextBlock HorizontalAlignment="Center" Margin="2">Int</TextBlock>
                                            <TextBox x:Name="Int" TextAlignment="Center" Margin="8, 2" Text="{Binding IntelligenceText}" LostFocus="OnStatLostFocus"/>
                                            <TextBlock x:Name="IntMod" HorizontalAlignment="Center" Margin="2" Text="{Binding IntelligenceModifier}"/>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>

                                            <TextBlock HorizontalAlignment="Center" Margin="2">Wis</TextBlock>
                                            <TextBox x:Name="Wis" TextAlignment="Center" Margin="8, 2" Text="{Binding WisdomText}" LostFocus="OnStatLostFocus"/>
                                            <TextBlock x:Name="WisMod" HorizontalAlignment="Center" Margin="2" Text="{Binding WisdomModifier}"/>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>

                                            <TextBlock HorizontalAlignment="Center" Margin="2">Cha</TextBlock>
                                            <TextBox x:Name="Cha" TextAlignment="Center" Margin="8, 2" Text="{Binding CharismaText}" LostFocus="OnStatLostFocus"/>
                                            <TextBlock x:Name="ChaMod" HorizontalAlignment="Center" Margin="2" Text="{Binding CharismaModifier}"/>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>
                                            
                                            <TextBlock HorizontalAlignment="Center" Margin="2">Inspiration</TextBlock>
                                            <TextBox Name="Inspiration" TextAlignment="Center" Margin="8, 2">10</TextBox>
                                            <Rectangle Fill="Black" Height="2" Margin="0, 1"/>
                                            
                                            <TextBlock HorizontalAlignment="Center" Margin="4, 2, 4, 0"
                                            MaxWidth="75">Proficiency</TextBlock>
                                            <TextBlock HorizontalAlignment="Center" Margin="4, 0, 4, 3"
                                            MaxWidth="75">Bonus</TextBlock>
                                            <TextBlock Name="ProficiencyMod" HorizontalAlignment="Center" Margin="2">0</TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel Name="Skills" Orientation="Vertical" VerticalAlignment="Stretch"
                                                Width="265" Height="617" Background="SaddleBrown">
                                        <Border BorderThickness="2" BorderBrush="Black">
                                            <Grid ColumnDefinitions=".8*, .8*, 2*, *" RowDefinitions="*">
                                                <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="White">
                                                    E</TextBlock>
                                                <TextBlock Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="White">
                                                    P</TextBlock>
                                                <TextBlock Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"
                                                           HorizontalAlignment="Left" Foreground="White">
                                                    Skills</TextBlock>
                                                <TextBlock Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="White">
                                                    Mod</TextBlock>
                                            </Grid>
                                        </Border>
                                        <Border BorderThickness="2" BorderBrush="Black">
                                            <Grid Name="StrengthBased" ColumnDefinitions=".8*, .8*, 2*, *"
                                                  RowDefinitions="*">
                                                <!-- Row 0 -->
                                                <CheckBox Name="AthleticsExpertise" Grid.Column="0" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding AthleticsExpertiseChecked}"/>
                                                <CheckBox Name="AthleticsProficiency" Grid.Column="1" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding AthleticsProficiencyChecked}" />
                                                <TextBlock Name="Athletics" Grid.Column="2" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Athletics</TextBlock>
                                                <TextBlock Name="AthleticsModifier" Grid.Column="3" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding AthleticsModifierText}">
                                                    </TextBlock>
                                            </Grid>
                                        </Border>
                                        <Border BorderThickness="2" BorderBrush="Black">
                                            <Grid Name="DexterityBased" ColumnDefinitions=".8*, .8*, 2*, *"
                                                  RowDefinitions="*, *, *">
                                                <!-- Row 0 -->
                                                <CheckBox Name="AcrobaticsExpertise" Grid.Column="0" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding AcrobaticsExpertiseChecked}"/>
                                                <CheckBox Name="AcrobaticsProficiency" Grid.Column="1" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding AcrobaticsProficiencyChecked}"/>
                                                <TextBlock Name="Acrobatics" Grid.Column="2" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Acrobatics</TextBlock>
                                                <TextBlock Name="AcrobaticsModifier" Grid.Column="3" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding AcrobaticsModifierText}">
                                                    </TextBlock>
                                                <!-- Row 1 -->
                                                <CheckBox Name="SleightOfHandExpertise" Grid.Column="0"
                                                          Grid.Row="1" VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" IsChecked="{Binding SleightOfHandExpertiseChecked}"/>
                                                <CheckBox Name="SleightOfHandProficiency" Grid.Column="1"
                                                          Grid.Row="1" VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" IsChecked="{Binding SleightOfHandProficiencyChecked}"/>
                                                <TextBlock Name="SleightOfHand" Grid.Column="2" Grid.Row="1"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Sleight of Hand</TextBlock>
                                                <TextBlock Name="SleightOfHandModifier" Grid.Column="3"
                                                           Grid.Row="1" VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="White" Text="{Binding SleightOfHandModifierText}">
                                                    </TextBlock>

                                                <!-- Row 2 -->
                                                <CheckBox Name="StealthExpertise" Grid.Column="0" Grid.Row="2"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding StealthExpertiseChecked}"/>
                                                <CheckBox Name="StealthProficiency" Grid.Column="1" Grid.Row="2"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding StealthProficiencyChecked}" />
                                                <TextBlock Name="Stealth" Grid.Column="2" Grid.Row="2"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Stealth</TextBlock>
                                                <TextBlock Name="StealthModifier" Grid.Column="3" Grid.Row="2"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding StealthModifierText}">
                                                    </TextBlock>
                                            </Grid>
                                        </Border>
                                        <Border BorderThickness="2" BorderBrush="Black">
                                            <Grid Name="IntelligenceBased" ColumnDefinitions=".8*, .8*, 2*, *"
                                                  RowDefinitions="*, *, *, *, *">
                                                <!-- Row 0 -->
                                                <CheckBox Name="ArcanaExpertise" Grid.Column="0" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ArcanaExpertiseChecked}"/>
                                                <CheckBox Name="ArcanaProficiency" Grid.Column="1" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ArcanaProficiencyChecked}"/>
                                                <TextBlock Name="Arcana" Grid.Column="2" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Arcana</TextBlock>
                                                <TextBlock Name="ArcanaModifier" Grid.Column="3" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding ArcanaModifierText}">
                                                    </TextBlock>

                                                <!-- Row 1 -->
                                                <CheckBox Name="HistoryExpertise" Grid.Column="0" Grid.Row="1"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding HistoryExpertiseChecked}" />
                                                <CheckBox Name="HistoryProficiency" Grid.Column="1" Grid.Row="1"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding HistoryProficiencyChecked}"/>
                                                <TextBlock Name="History" Grid.Column="2" Grid.Row="1"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    History</TextBlock>
                                                <TextBlock Name="HistoryModifier" Grid.Column="3" Grid.Row="1"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding HistoryModifierText}">
                                                    </TextBlock>

                                                <!-- Row 2 -->
                                                <CheckBox Name="InvestigationExpertise" Grid.Column="0"
                                                          Grid.Row="2" VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"  IsChecked="{Binding InvestigationExpertiseChecked}"/>
                                                <CheckBox Name="InvestigationProficiency" Grid.Column="1"
                                                          Grid.Row="2" VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" IsChecked="{Binding InvestigationProficiencyChecked}" />
                                                <TextBlock Name="Investigation" Grid.Column="2" Grid.Row="2"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Investigation</TextBlock>
                                                <TextBlock Name="InvestigationModifier" Grid.Column="3"
                                                           Grid.Row="2" VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="White" Text="{Binding InvestigationModifierText}">
                                                    </TextBlock>

                                                <!-- Row 3 -->
                                                <CheckBox Name="NatureExpertise" Grid.Column="0" Grid.Row="3"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding NatureExpertiseChecked}" />
                                                <CheckBox Name="NatureProficiency" Grid.Column="1" Grid.Row="3"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding NatureProficiencyChecked}" />
                                                <TextBlock Name="Nature" Grid.Column="2" Grid.Row="3"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Nature</TextBlock>
                                                <TextBlock Name="NatureModifier" Grid.Column="3" Grid.Row="3"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding NatureModifierText}">
                                                    </TextBlock>

                                                <!-- Row 4 -->
                                                <CheckBox Name="ReligionExpertise" Grid.Column="0" Grid.Row="4"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ReligionExpertiseChecked}"/>
                                                <CheckBox Name="ReligionProficiency" Grid.Column="1" Grid.Row="4"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding ReligionProficiencyChecked}" />
                                                <TextBlock Name="Religion" Grid.Column="2" Grid.Row="4"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Religion</TextBlock>
                                                <TextBlock Name="ReligionModifier" Grid.Column="3" Grid.Row="4"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding ReligionModifierText}">
                                                    </TextBlock>
                                            </Grid>
                                        </Border>
                                        <Border BorderThickness="2" BorderBrush="Black">
                                            <Grid Name="WisdomBased" ColumnDefinitions=".8*, .8*, 2*, *"
                                                  RowDefinitions="*, *, *, *, *">
                                                <!-- Row 0 -->
                                                <CheckBox Name="AnimalHandlingExpertise" Grid.Column="0"
                                                          Grid.Row="0" VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" IsChecked="{Binding AnimalHandlingExpertiseChecked}"/>
                                                <CheckBox Name="AnimalHandlingProficiency" Grid.Column="1"
                                                          Grid.Row="0" VerticalAlignment="Center"
                                                          HorizontalAlignment="Center" IsChecked="{Binding AnimalHandlingProficiencyChecked}"/>
                                                <TextBlock Name="AnimalHandling" Grid.Column="2" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Animal Handling</TextBlock>
                                                <TextBlock Name="AnimalHandlingModifier" Grid.Column="3"
                                                           Grid.Row="0" VerticalAlignment="Center"
                                                           HorizontalAlignment="Center" Foreground="White" Text="{Binding AnimalHandlingModifierText}">
                                                    </TextBlock>

                                                <!-- Row 1 -->
                                                <CheckBox Name="InsightExpertise" Grid.Column="0" Grid.Row="1"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding InsightExpertiseChecked}"/>
                                                <CheckBox Name="InsightProficiency" Grid.Column="1" Grid.Row="1"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding InsightProficiencyChecked}"/>
                                                <TextBlock Name="Insight" Grid.Column="2" Grid.Row="1"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Insight</TextBlock>
                                                <TextBlock Name="InsightModifier" Grid.Column="3" Grid.Row="1"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding InsightModifierText}">
                                                    </TextBlock>

                                                <!-- Row 2 -->
                                                <CheckBox Name="MedicineExpertise" Grid.Column="0" Grid.Row="2"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding MedicineExpertiseChecked}"/>
                                                <CheckBox Name="MedicineProficiency" Grid.Column="1" Grid.Row="2"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding MedicineExpertiseCheckeds}"/>
                                                <TextBlock Name="Medicine" Grid.Column="2" Grid.Row="2"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Medicine</TextBlock>
                                                <TextBlock Name="MedicineModifier" Grid.Column="3" Grid.Row="2"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding MedicineModifierText}">
                                                    </TextBlock>

                                                <!-- Row 3 -->
                                                <CheckBox Name="PerceptionExpertise" Grid.Column="0" Grid.Row="3"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding PerceptionExpertiseChecked}"/>
                                                <CheckBox Name="PerceptionProficiency" Grid.Column="1" Grid.Row="3"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding PerceptionProficiencyChecked}"/>
                                                <TextBlock Name="Perception" Grid.Column="2" Grid.Row="3"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Perception</TextBlock>
                                                <TextBlock Name="PerceptionModifier" Grid.Column="3" Grid.Row="3"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding PerceptionModifierText}">
                                                    </TextBlock>

                                                <!-- Row 4 -->
                                                <CheckBox Name="SurvivalExpertise" Grid.Column="0" Grid.Row="4"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding SurvivalExpertiseChecked}"/>
                                                <CheckBox Name="SurvivalProficiency" Grid.Column="1" Grid.Row="4"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding SurvivalProficiencyChecked}" />
                                                <TextBlock Name="Survival" Grid.Column="2" Grid.Row="4"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Survival</TextBlock>
                                                <TextBlock Name="SurvivalModifier" Grid.Column="3" Grid.Row="4"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding SurvivalModifierText}">
                                                    </TextBlock>
                                            </Grid>
                                        </Border>
                                        <Border BorderThickness="2" BorderBrush="Black">
                                            <Grid Name="CharismaBased" ColumnDefinitions=".8*, .8*, 2*, *"
                                                  RowDefinitions="*, *, *, *">
                                                <!-- Row 0 -->
                                                <CheckBox Name="DeceptionExpertise" Grid.Column="0" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding DeceptionExpertiseChecked}" />
                                                <CheckBox Name="DeceptionProficiency" Grid.Column="1" Grid.Row="0"
                                                          VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding DeceptionProficiencyChecked}"/>
                                                <TextBlock Name="Deception" Grid.Column="2" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Left"
                                                           TextWrapping="Wrap" Foreground="White">
                                                    Deception</TextBlock>
                                                <TextBlock Name="DeceptionModifier" Grid.Column="3" Grid.Row="0"
                                                           VerticalAlignment="Center" HorizontalAlignment="Center"
                                                           Foreground="White" Text="{Binding DeceptionModifierText}"> 
                                                    </TextBlock>

                                                <!-- Row 1 -->
